{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "target": "ES2021",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./",
    "rootDir": "./",
    "resolveJsonModule": true,
    "lib": ["ES2021"]
  },
  "include": ["index.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "api", "dist", "public", "scripts"]
}
