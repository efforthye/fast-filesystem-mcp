# Language detection overrides
src/index.ts linguist-language=TypeScript
*.ts linguist-language=TypeScript
*.mts linguist-language=TypeScript

# JavaScript files
*.mjs linguist-language=JavaScript
*.js linguist-language=JavaScript

# Mark test and script files as generated to exclude from language stats
scripts/* linguist-generated=true
test-search-data/* linguist-generated=true

# Mark config and lock files as generated
package-lock.json linguist-generated=true
pnpm-lock.yaml linguist-generated=true
*.lock linguist-generated=true

# Documentation and config files
*.md linguist-documentation=true
*.json linguist-generated=true
tsconfig.json linguist-generated=true
vercel.json linguist-generated=true
glama.json linguist-generated=true